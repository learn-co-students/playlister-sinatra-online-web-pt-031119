<h3>Edit Song - <%= @song.name %></h3>

<form method="POST" action="/songs/<%= @song.slug %>">
<input type="hidden" name="_method" value="patch" id="hidden">

    <label for="Name">Song Name</label>
    <br>
    <input type="text" name="song[name]" value="<%= @song.name %>" id="Name">
    <br>
    <br> 

    <label for="Artist Name">Artist Name</label>
    <br>
    <input type="text" name="artist[name]" value="<%= @song.artist.name %>" id="Artist Name">
    <br>

    <h4>Song Genre</h4>

    <% Genre.all.each do |genre| %>
        <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.name %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %></input>
        <br>
    <% end %>
    <br>

    <input type="submit" value="Save">

</form>