<h1>Update Song</h1>

<form action="/songs/<%=@song.slug%>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Name:</label>
    <br>
    <input type="text" name="song[name]" value="<%=@song.name%>"></input>

    <br><br>
    <label>Choose an existing genre:</label>
    <br>
    <% @genres.each do |genre| %>
        <input type="checkbox" name="song[genre_ids][]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%></input>
    <%end%>
    <br><br>
    
    <label>Update artist:</label>
    <br>
    <label>name:</label>
    <input type="text" name="Artist Name" value="<%=@song.artist.name%>"></input>
  
    <br><br>
    <input type="submit" id="Save" value="Save">
</form>

