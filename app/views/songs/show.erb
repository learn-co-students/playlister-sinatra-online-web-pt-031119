<h1>Song Name:  <%=@song.name%></h1>
<h2>Song Artist:  <a href="/artists/<%=@song.artist.slug %>"><%=@song.artist.name%></a></h2>
<h2>Song Genres:</h2>

	<%@song.genres.each do |genre|%>
	<p><a href="/genres/<%=genre.slug %>"><%=genre.name%></a></p>
	<%end%>


<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
